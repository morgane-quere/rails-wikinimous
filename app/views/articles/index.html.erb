<h1>Potterhead's artciles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <div class="card">  
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
          <p class="card-text"><%= article.content %></p>    
        </div>
      </div>
    </li>
  <% end %>
</ul>


